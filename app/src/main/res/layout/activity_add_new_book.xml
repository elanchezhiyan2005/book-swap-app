<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background"
        android:padding="16dp"
        android:paddingBottom="8dp">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Back"
            android:padding="12dp"
            android:scaleType="fitCenter" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Add a New Book"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/TextPrimary"
            android:fontFamily="@font/manrope_bold" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ISBN Radio Buttons -->
            <RadioGroup
                android:id="@+id/isbnRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/radioYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_background"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:text="Yes, I have an ISBN"
                    android:textSize="14sp"
                    style="@style/TextPrimary"
                    android:fontFamily="@font/noto_sans_regular" />

                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_background"
                    android:button="@android:color/transparent"
                    android:padding="12dp"
                    android:text="No, I'll enter details manually"
                    android:textSize="14sp"
                    style="@style/TextPrimary"
                    android:fontFamily="@font/noto_sans_regular" />
            </RadioGroup>

            <!-- ISBN Input Section -->
            <LinearLayout
                android:id="@+id/isbnFetchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/TextPrimary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/noto_sans_bold" />

                <EditText
                    android:id="@+id/isbnInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter ISBN"
                    android:inputType="number"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/noto_sans_regular" />

                <Button
                    android:id="@+id/fetchDetailsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@drawable/button_light_background"
                    android:text="Fetch Details"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="16dp"
                    android:fontFamily="@font/manrope_bold" />
            </LinearLayout>

            <!-- Book Details Inputs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Title"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:fontFamily="@font/noto_sans_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/authorInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Author"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:fontFamily="@font/noto_sans_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/publisherInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Publisher"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:fontFamily="@font/noto_sans_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edition"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/editionInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Edition"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:fontFamily="@font/noto_sans_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/yearInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Year"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:fontFamily="@font/noto_sans_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/genreInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Genre"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_bold" />

            <EditText
                android:id="@+id/placeNameInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter your location"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/noto_sans_regular" />

            <!-- Action Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RadioGroup
                    android:id="@+id/actionRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/actionSwap"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="Swap"
                        android:textSize="14sp"
                        style="@style/TextPrimary"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_regular" />

                    <RadioButton
                        android:id="@+id/actionSell"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="Sell"
                        android:textSize="14sp"
                        style="@style/TextPrimary"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_regular" />

                    <RadioButton
                        android:id="@+id/actionLend"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="Lend"
                        android:textSize="14sp"
                        style="@style/TextPrimary"
                        android:fontFamily="@font/noto_sans_regular" />
                </RadioGroup>
            </LinearLayout>

            <!-- Save and Cancel Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_light_background"
                    android:text="Cancel"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/manrope_bold" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_add_new_book_background"
                    android:text="Save"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/manrope_bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#A3BFFA"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>