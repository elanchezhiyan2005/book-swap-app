<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="#00FF00" /> <!-- Green for Swap -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="#0000FF" /> <!-- Blue for Lend/Borrow -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FFA500" /> <!-- Orange for Buy -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#e7e7f4" /> <!-- Default -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>